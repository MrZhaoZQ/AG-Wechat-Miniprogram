/* pages/address/address.wxss */
page{
  background-color: #f5f5f5;
}
.container{
  font-size: 26rpx;
}

.addressList{
  width: 100%;
  box-sizing: border-box;
  border-top: 1rpx #ddd solid;
  padding-bottom: 120rpx;
}
.addressList .addressItem{
  width: 100%; height: 205rpx;
  margin-top: 20rpx;
  background: #fff;
}
.addressList .addressItem .infoBox{
  width: 100%; height: 130rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}
.addressList .addressItem .infoBox .info{
  width: 100%;
  margin-bottom: 10rpx;
}
.addressList .addressItem .infoBox .info .name{
  margin-right: 35rpx;
}
.addressList .addressItem .btnsBox{
  width: 100%; height: 75rpx;
  box-sizing: border-box;
  border-top: 1rpx #ddd solid;
  padding-left: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.addressList .addressItem .btnsBox .isDefault{
  height: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  color: #666;
}
.addressList .addressItem .btnsBox .isDefault icon{
  margin-right: 10rpx;
}
.addressList .addressItem .btnsBox .opts{
  width: auto; height: 100%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.addressList .addressItem .btnsBox .opts .edit{
  width: 28rpx; height: 36rpx;
  padding: 15rpx 20rpx;
}
.addressList .addressItem .btnsBox .opts .delete{
  width: 28rpx; height: 36rpx;
  padding: 15rpx 20rpx;
}

.addBtn{
  width: 710rpx; height: 80rpx;
  border-radius: 10rpx;
  background: #012856;
  position: fixed; left: 20rpx; bottom: 40rpx;
  color: #fff;
  font-size: 30rpx;
  text-align: center;
  line-height: 80rpx;
}