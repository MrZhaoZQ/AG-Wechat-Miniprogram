/* pages/help/help.wxss */
page{
  background: #e6e6e6;
}

.container{
  font-size: 26rpx;
}

.hcBanner{
  width: 750rpx; height: 554rpx;
  margin-bottom: 40rpx;
}

.FAQlist{
  width: 100%;
  background: #fff;
}
.FAQlist .FAQitem{
  width: 100%;
  border-bottom: 4rpx #e6e6e6 solid;
}
.FAQlist .FAQitem .itemName{
  width: 100%; height: 136rpx;
  box-sizing: border-box;
  padding-left: 56rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.FAQlist .FAQitem .itemName text{
  color: #012856;
  font-size: 28rpx;
}
.FAQlist .FAQitem .itemName .btn{
  height: 100%;
  padding: 0 56rpx;
  line-height: 136rpx;
  font-weight: bolder;
  font-size: 32rpx;
  color: #012856;
}
.FAQlist .FAQitem .txtBox{
  display: block;
  width: 100%;
  box-sizing: border-box;
  padding: 0 56rpx 30rpx;
}