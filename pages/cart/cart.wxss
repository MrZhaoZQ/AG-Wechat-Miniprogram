/* pages/cart/cart.wxss */
.container{
  padding-bottom: 96rpx;
  background: #fff;
  font-size: 26rpx;
}

.kv{
  width: 750rpx; height: 809rpx;
}
.topBar{
  width: 100%; height: 40rpx;
  margin: 28rpx 0;
  box-sizing: border-box;
  padding: 0 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  line-height: 40rpx;
  color: #bbb;
}
.topBar .subtitle{
  height: 40rpx;
}
.topBar .delete{
  height: 40rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.topBar .delete image{
  width: 28rpx; height: 36rpx;
  margin-right: 8rpx;
}
.prodList{
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx 40rpx 80rpx;
}
.prodList .prodItem{
  width: 100%;
  margin-bottom: 10rpx;
  display: flex;
  justify-content: flex-start;
  align-items: centerï¼›
}
.prodList .prodItem .prodImg{
  width: 176rpx; height: 176rpx;
  margin-right: 30rpx;
}
.prodList .prodItem .prodInfo{
  flex: 1;
  height: 176rpx;
  box-sizing: border-box;
  padding-top: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
}
.prodList .prodItem .prodInfo .prodName{
  width: 100%;
}
.prodList .prodItem .prodInfo .prodDesc{
  width: 100%;
  margin-bottom: 30rpx;
  font-size: 24rpx;
  color: #7c7c7c;
}
.prodList .prodItem .prodInfo .priceAndNum{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}
.prodList .prodItem .prodInfo .priceAndNum .price{
  font-family: "cprBold";
  font-weight: bolder;
}
.prodList .prodItem .prodInfo .priceAndNum .numBox{
  width: 172rpx; height: 56rpx;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
}
.numBox .minus, .numBox .add{
  width: 60rpx; height: 56rpx;
  background: #eee;
  font-size: 32rpx;
}
.numBox .num{
  width: 52rpx; height: 56rpx;
}
.numBox view{
  text-align: center;
  line-height: 56rpx;
}

.fixedBottom{
  width: 100%; height: 96rpx;
  background: #fff;
  position: fixed; left: 0; bottom: 0;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
}
.fixedBottom .totalBox{
  flex: 1; height: 100%;
  box-sizing: border-box;
  padding: 0 55rpx;
  border: 1rpx #012856 solid;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.fixedBottom .totalBox .total{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.fixedBottom .totalBox .total .totalNum{
  font-size: 28rpx;
  font-family: "cprBold";
  font-weight:bolder;
}
.fixedBottom .totalBox .inc{
  width: 100%;
  color: #012856;
  font-size: 22rpx;
  text-align: right;
} 
.fixedBottom button{
  width: 282rpx; height: 96rpx;
  background: #58ae4d;
  font-size: 26rpx;
  color: #fff;
  text-align: center;
  line-height: 96rpx;
}